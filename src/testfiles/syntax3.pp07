// Concurrent Banking Application

global int y;
global bool x = false;

void init() {
	y = 100;
}

int getY() {
	while (locked lock0) {}
	return y;
}

void setStuff(int number) {
	lock lock0;
	y = number;
	if (x) {
		x = !x;
	} else {
		x = x || (true);
	}
	unlock lock0;
}

int setAndGet(int num) {
	setStuff(num);
	return getY();
}

void doALot(int i, int j, int k) {
	setStuff(i);
	setStuff(j);
	setStuff(k);
}

INT doMore() {
	iNt i = y;
	setStuff(1);
	setStuff(2);
	setStuff(3);
	i = setAndGet(4);
	return i;
}

void main() {
	init();
	int a = 0;
	bool b = x;
	a = getY();
	setStuff(82398);
	b = x;
	a = a ++ setAndGet(50);
	run t0 (doALot, 10, 20, 30);
	run t1 (doMore);
	run t2 (doALot, 0, 15, 45);
	join t0;
	join t2;
	a = join t1;
}